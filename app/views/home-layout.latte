<!DOCTYPE html>
<html lang="no" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{block title}SÃ¸knadsystem for vitenskapelige studenter{/block}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    {block styles}{/block}
</head>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <div aria-live="polite" aria-atomic="true"
                class="position-fixed top-0 start-50 translate-middle-x p-3"
                style="z-index: 1080;">
            {if isset($message)}
                <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            {if is_array($message) && count($message) > 1}
                                <ul class="mb-0 ps-3">
                                    {foreach $message as $item}
                                        <li>{$item}</li>
                                    {/foreach}
                                </ul>
                            {elseif is_array($message) && count($message) === 1}
                                {$message[0]}
                            {elseif !is_array($message)}
                                {$message}
                            {/if}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            {/if}
            {if isset($errors)}
                <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            {var $errorList = is_array($errors) ? array_unique($errors) : [$errors]}
                            {if count($errorList) > 1}
                                <ul class="mb-0 ps-3">
                                    {foreach $errorList as $item}
                                        {if is_string($item)}
                                            <li>{$item}</li>
                                        {/if}
                                    {/foreach}
                                </ul>
                            {elseif count($errorList) === 1}
                                {foreach $errorList as $item}
                                    {if is_string($item)}{$item}{/if}
                                {/foreach}
                            {/if}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            {/if}
        </div>
        {include content}
    </main>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" nonce="{$csp_nonce}"></script>
    <script src="/js/bootstrap-toast-logic.js" nonce="{$csp_nonce}"></script> 
    {block scripts}{/block}
</body>
</html>
